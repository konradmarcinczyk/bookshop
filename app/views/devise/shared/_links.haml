- if controller_name != 'sessions'
  = link_to "Zaloguj się", new_session_path(resource_name)
  %br/
- if devise_mapping.registerable? && controller_name != 'registrations'
  = link_to "Zarejestruj się", new_registration_path(resource_name)
  %br/
- if devise_mapping.recoverable? && controller_name != 'passwords'
  = link_to "Zapomniałeś hasła?", new_password_path(resource_name)
  %br/
- if devise_mapping.confirmable? && controller_name != 'confirmations'
  = link_to "Nie otrzymałeś instrukcji potwierdzenia konta?", new_confirmation_path(resource_name)
  %br/
- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks'
  = link_to "Nie otrzymałeś instrukjcji odblokowania konta?", new_unlock_path(resource_name)
  %br/

